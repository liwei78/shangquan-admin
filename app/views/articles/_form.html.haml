- content_for :header do
  :javascript
    function add_upload_file() {
      $('#upload_div').clone().insertBefore('.addmore');
    }

= form_for(article) do |f|
  %table.styled
    %tbody
      %tr
        %td
          标题
        %td
          = f.text_field :title, :class => "input fullwidth"
      - if article.poster.present?
        %tr
          %td
            封面预览
          %td
            = image_tag article.poster.url
      %tr
        %td
          封面
        %td
          = f.file_field :poster
      %tr
        %td
          图片预览
        %td
          %ul.img_list
            - for photo in article.photos
              %li
                .del
                  = link_to image_tag("del.png"), del_pic_article_path(article, :pid => photo.id), :method => :post, :confirm => "确定删除吗？"
                = image_tag(photo.file.url(:small))
            .clearfix
      %tr#upload_div
        %td
          图片
        %td
          = file_field_tag "photos[file][]"
      %tr.addmore
        %td

        %td
          = link_to("增加上传", js_void, :onclick => "add_upload_file();")
      %tr
        %td
          视频代码
        %td
          = f.text_field :code, :class => "input fullwidth"
      %tr
        %td
          
        %td.grey
          支持优酷/土豆/酷6/六间房/56网/音悦台/搜狐/奇艺的swf格式的视频代码,如 http://www.youku.com/sample.swf
      %tr
        %td
          标签
        %td.grey
          = f.text_field :tag_list, :class => "input medium"
          %small
            中文逗号分隔
      %tr
        %td
          内容
        %td
          = f.cktext_area("content", :input_html => {:cols => 10, :rows => 20}, :toolbar => 'Basic')
      %tr
        %td
          
        %td
          - unless article.new_record?
            .right
              = link_to "删除", article_url(article), :title => "删除", :method => "delete", :confirm => "点击确定继续"
          = submit_tag("确定", :class => "submit")
          = link_to "返回", :back
            
          
            
          
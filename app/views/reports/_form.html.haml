= form_for(report) do |f|
  %table.styled
    %tbody
      %tr
        %td
          活动时间
        %td
          = f.text_field :opening_date, :class => "input medium"
      %tr
        %td
          信息来源
        %td
          = f.text_field :info_from, :class => "input medium"
      %tr
        %td
          详情
        %td
          = f.text_area("content", :input_html => {:cols => 10, :rows => 20})
      - if report.photos.present?
        - for photo in report.photos
          %tr
            %td
              
            %td
              = link_to image_tag(photo.file.url, :width => 80), photo.file.url, :target => "_blank"
      %tr
        %td
          
        %td
          - unless report.new_record?
            .right
              = link_to "删除", report_url(report), :title => "删除", :method => "delete", :confirm => "点击确定继续"
          = submit_tag("确定", :class => "submit")
            
          
            

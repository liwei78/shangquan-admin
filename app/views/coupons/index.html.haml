.banner
  .layout
    .title
      列表
- unless flash[:notice].nil?
  .noticediv
    .layout
      = flash[:notice]
.layout
  .h20
  .widebox.left
    %table.styled
      %thead
        %tr
          %th
            描述
          %th
            管理
      %tbody
        - for coupon in @coupons
          %tr
            %td
              = link_to "#{coupon.archetype.name if coupon.archetype.present?} 优惠券", coupon_url(coupon)
            %td
              = link_to "编辑", edit_coupon_url(coupon)
      %tfoot
        %tr
          %td{:colspan => 2}
            = will_paginate @coupons, :param_name => "page", :previous_label => "上一页", :next_label => "下一页"
  .siderbox.right
    .mb
      = link_to raw("<strong>添加</strong>"), new_coupon_url(:fromid => params[:fromid]), :class => "add-link"
    
  .clearfix

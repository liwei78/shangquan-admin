!!!
%html(xmlns="http://www.w3.org/1999/xhtml")
  %head
    %title= site_title
    %meta{'http-equiv' => "content-type", :content => "text/html; charset=UTF-8"}
    = stylesheet_link_tag :application
    = javascript_include_tag :application
    = csrf_meta_tag
    = yield :header
  %body
    .header
      .layout
        .topnav
          .right
            = link_to "退出", logout_url
        .logo
          = image_tag("adminlogo.png")
        .nav
          %ul
            %li
              = link_to "管理首页", root_url, :class => admin_nav?("index")
            %li
              = link_to "用户管理", users_url, :class => admin_nav?("users")
            %li
              = link_to "文章管理", articles_url, :class => admin_nav?("articles")
            %li
              = link_to "频道管理", channels_url, :class => admin_nav?("channels")            
            %li
              = link_to "分类管理", categories_url, :class => admin_nav?("categories")            
            %li
              = link_to "商圈管理", areas_url, :class => admin_nav?("areas")            
            %li
              = link_to "活动管理", activities_url, :class => admin_nav?("activities")
            %li
              = link_to "商品管理", items_url, :class => admin_nav?("items")
            %li
              = link_to "广告管理", banners_url, :class => admin_nav?("banners")
            %li
              = link_to "内容管理", pages_url, :class => admin_nav?("pages")
            %li
              = link_to "用户线报", reports_url, :class => admin_nav?("reports")

            .clearfix
    .mainbox
      = yield
    .h20
    .footer
      &copy 2012
      = site_title

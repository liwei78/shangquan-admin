= form_for(activity) do |f|
  %table.styled
    %tbody
      %tr
        %td
          活动类型
        %td
          = f.select :activity_type, SITE_SETTINGS['activity_type']
      %tr
        %td
          标题
        %td
          = f.text_field :title, :class => "input medium"
      %tr
        %td
          活动时间
        %td
          = f.text_field :schedule, :class => "input medium"
      %tr
        %td
          折扣
        %td
          = f.text_field :discount, :class => "input medium"
      %tr
        %td
          活动商场
        %td
          = f.text_field :place, :class => "input medium"
      %tr
        %td
          地址
        %td
          = f.text_field :address, :class => "input medium"
      %tr
        %td
          电话
        %td
          = f.text_field :telphone, :class => "input medium"
      %tr
        %td
          营业时间
        %td
          = f.text_field :office_time, :class => "input medium"
      %tr
        %td
          公交信息
        %td
          = f.text_field :bus_info, :class => "input medium"
      %tr
        %td
          网站
        %td
          = f.text_field :website, :class => "input medium"
      %tr
        %td
          详情
        %td
          = f.cktext_area("content", :input_html => {:cols => 10, :rows => 20}, :toolbar => 'Basic')
      %tr
        %td
          海报
        %td
          - unless activity.new_record?
            = image_tag(activity.poster.url(:small))
            %br
          = f.file_field :poster
      %tr
        %td
          
        %td
          - unless activity.new_record?
            .right
              = link_to "删除", activity_url(activity), :title => "删除", :method => "delete", :confirm => "点击确定继续"
          = submit_tag("确定", :class => "submit")
          = link_to "返回", :back
            
          
            

= form_for(company) do |f|
  %table.styled
    %tbody
      %tr
        %td
          标题
        %td
          = f.text_field :title, :class => "input"
      %tr
        %td
          地址
        %td
          = f.text_field :address, :class => "input"
      %tr
        %td
          电话
        %td
          = f.text_field :telphone, :class => "input"
      %tr
        %td
          介绍
        %td
          = f.cktext_area("intro", :input_html => {:cols => 10, :rows => 20}, :toolbar => 'Basic')
      %tr
        %td
          
        %td
          - unless company.new_record?
            .right
              = link_to "删除", company_url(company), :title => "删除", :method => "delete", :confirm => "点击确定继续"
          = submit_tag("确定", :class => "submit")
          = link_to "返回", :back
            
          
            

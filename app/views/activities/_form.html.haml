= form_for(activity) do |f|
  %table.styled
    %tbody
      %tr
        %td
          标题
        %td
          = f.text_field :title, :class => "input medium"
      %tr
        %td
          时间
        %td
          = f.text_field :time, :class => "input medium"
      %tr
        %td
          地址
        %td
          = f.text_field :address, :class => "input medium"
      %tr
        %td
          电话
        %td
          = f.text_field :telphone, :class => "input medium"
      %tr
        %td
          详情
        %td
          = f.cktext_area("content", :input_html => {:cols => 10, :rows => 20}, :toolbar => 'Basic')
      %tr
        %td
          
        %td
          - unless activity.new_record?
            .right
              = link_to "删除", activity_url(activity), :title => "删除", :method => "delete", :confirm => "点击确定继续"
          = submit_tag("确定", :class => "submit")
          = link_to "返回", :back
            
          
            

.banner
  .layout
    .title
      列表
- unless flash[:notice].nil?
  .noticediv
    .layout
      = flash[:notice]

.layout
  .h20
  .widebox.left
    .infoboxs
      - for channel in @channels
        .box
          .boxtitle
            = channel.name
          .boxcontent
            %table.tiny
              %tr
                %td
                  当前
                  = channel.name
                %td
                  = link_to channel.archetypes.count, archetypes_channel_url(channel)
                  个
              %tr
                %td
                  当前
                  = channel.name
                  文章
                %td
                  = link_to channel.articles.count, articles_channel_url(channel)
                  篇

      .clearfix
          
  .siderbox.right
    .box.mb
      .content
        %ul
          %li= link_to "认领审核", applies_url(:from => "channels")
          %li= link_to "用户线报", channels_reports_url
    .box.mb
      .title
        频道
      .content
        %ul.category_list
          - for cha in Channel.order("position")
            %li
              = link_to cha.name, edit_channel_path(cha)
          %li= link_to "添加频道", new_channel_path, :class => "add-link2"    
    
  .clearfix

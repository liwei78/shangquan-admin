.banner
  .layout
    .title
      查看活动
- unless flash[:notice].nil?
  .noticediv
    .layout
      = flash[:notice]

.layout
  %table.styled
    %tbody
      %tr
        %td{:width => "20%"}
          标题
        %td
          = @activity_report.title
      %tr
        %td
          详情
        %td
          = @activity_report.content.html_safe
    %tfoot
      %tr
        %td{:colspan => 2}
          .right
            = link_to "删除", activity_report_url(@activity_report), :title => "删除", :method => "delete", :confirm => "点击确定继续"
          = link_to "编辑", edit_activity_report_url(@activity_report)
          

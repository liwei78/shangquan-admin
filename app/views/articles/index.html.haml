.banner
  .layout
    .title
      列表
- unless flash[:notice].nil?
  .noticediv
    .layout
      = flash[:notice]
.layout
  .h20
  .widebox.left
    %table.styled
      %thead
        %tr
          %th{:width => '60%'}
            标题
          %th
            审核状态
          %th
            管理
      %tbody
        - for article in @articles
          %tr
            %td
              = link_to article.content.truncate(100, :omission => "..."), article_url(article)
            %td
              = article.state_name
            %td
              = link_to "编辑", edit_article_url(article)
      %tfoot
        %tr
          %td{:colspan => 3}
            = will_paginate @articles, :param_name => "page", :previous_label => "上一页", :next_label => "下一页"
  .siderbox.right
    .mb
      = link_to raw("<strong>添加</strong>"), new_article_url, :class => "add-link"
    
    
  .clearfix

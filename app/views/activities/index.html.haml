.banner
  .layout
    .title
      活动管理
- unless flash[:notice].nil?
  .noticediv
    .layout
      = flash[:notice]

.layout
  .h20
  .widebox.left
    %table.styled
      %thead
        %tr
          %th
            名称
          %th
            管理
      %tbody
        - for activity in @activities
          %tr
            %td
              = link_to activity.title, activity_url(activity)
            %td
              = link_to "编辑", edit_activity_url(activity)
      %tfoot
        %tr
          %td{:colspan => 2}
            = will_paginate @activities, :param_name => "page", :previous_label => "上一页", :next_label => "下一页"
          
  .siderbox.right
    .mb
      = link_to raw("<strong>添加</strong>"), new_activity_url, :class => "add-link"
    .box.mb
      .content
        %ul
          %li= link_to "新活动审核", activity_reports_url
          %li= link_to "活动管理", activities_url
    .box.mb
      .title
        分类
      .content
        %ul.category_list
          - for cat in Category.order("position")
            %li
              = link_to cat.name, edit_category_path(cat)
          %li= link_to "添加分类", new_category_path, :class => "add-link2"
    .box.mb
      .title
        地区
      .content
        %ul.category_list
          - for area in Area.order("position")
            %li
              = link_to area.name, edit_area_path(area)
          %li= link_to "添加分类", new_area_path, :class => "add-link2"

  .clearfix
